generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  isAdmin   Boolean  @default(false)

  uplenitve Uplenitev[]
  createdAt DateTime @default(now())
}

model Divjad {
  id        Int      @id @default(autoincrement())
  naziv     String
  opis      String?
  createdAt DateTime @default(now())

  uplenitve Uplenitev[]
}

model Obvestilo {
  id        Int      @id @default(autoincrement())
  naslov    String
  vsebina   String
  createdAt DateTime @default(now())
}

model Uplenitev {
  id        Int      @id @default(autoincrement())
  userId    Int
  divjadId  Int
  opis      String?
  datum     DateTime @default(now())

  user      User    @relation(fields: [userId], references: [id])
  divjad    Divjad  @relation(fields: [divjadId], references: [id])
}
